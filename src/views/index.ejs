<%- include("./includes/head.ejs"); %> <%- include("./includes/nav.ejs"); %>

<div class="contianer">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos est√£o a baixo</p>

      <%- include("./includes/messages.ejs")%>

      <div class="responsive-table">
        <table class="table">
          <% contatos.forEach((contato) => {%>
          <tr>
            <td><%= contato.nome %></td>
            <td><%= contato.sobrenome %></td>
            <td><%= contato.telefone %></td>
            <td><%= contato.email %></td>
            <td><a href="/contato/index/<%= contato._id %>">Edit</a></td>
            <td>
              <a class="text-danger" href="/contato/delete/<%= contato._id %>"
                >Excluir</a
              >
            </td>
          </tr>
          <% })%>
        </table>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

